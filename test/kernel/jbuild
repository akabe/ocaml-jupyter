(jbuild_version 1)

(executables
 ((names      (test_kernel))
  (modes      (byte))
  (preprocess (pps (lwt_ppx ppx_deriving.show)))
  (libraries  (jupyter
               jupyter_kernel
               oUnit
               ppx_deriving.runtime))
  (flags      ((:include ${ROOT}/config/ocaml_flags.sexp)
               (:include ${ROOT}/config/ocaml_test_flags.sexp)))))

(alias
 ((name   runtest)
  (deps   (test_kernel.bc))
  (action (chdir ${ROOT}/test (run ${<} -runner sequential)))))
