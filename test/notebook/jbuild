(jbuild_version 1)

(executables
 ((names      (test_notebook))
  (modes      (byte))
  (preprocess (pps (lwt_ppx ppx_deriving.show)))
  (libraries  (jupyter
               jupyter_repl
               jupyter_notebook
               oUnit
               ppx_deriving.runtime))
  (flags      ((:include ${ROOT}/config/ocaml_flags.sexp)
               (:include ${ROOT}/config/ocaml_test_flags.sexp)))))

(rule
 ((targets (eval_util.ml))
  (deps    (../repl/eval_util.ml))
  (action  (copy ${<} ${@}))))

(alias
 ((name   runtest)
  (deps   (test_notebook.bc
           ../fixtures/nbinit.ml))
  (action (chdir ${ROOT}/test (run ${<} -runner sequential)))))
